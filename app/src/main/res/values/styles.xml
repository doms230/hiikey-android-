<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>>

    /////////////////////////////////////////////////////////////////////////////////////

    <style name="yolo" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/mymymy</item>
        <item name="android:actionBarTabTextStyle">@style/TabTexty</item>
        <item name="android:actionMenuTextColor">@color/white</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/mymymy</item>
        <item name="actionBarTabTextStyle">@style/TabTexty</item>
        <item name="actionMenuTextColor">@color/white</item>

    </style>

    <style name="mymymy" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/TitleStuff</item>
        <item name="android:background">@color/appColor</item>
        <item name="android:backgroundStacked">@color/white</item>
        <item name="android:backgroundSplit">@color/white</item>

        <item name="titleTextStyle">@style/TitleStuff</item>
        <item name="background">@color/appColor</item>
        <item name="backgroundStacked">@color/white</item>
        <item name="backgroundSplit">@color/white</item>

    </style>

    <style name="TitleStuff" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TabTexty" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/white</item>
    </style>
    
</resources>
