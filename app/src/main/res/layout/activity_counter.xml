<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.dominic.nopinion.socialgroupe.Counter">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/count"
        android:id="@+id/tvCounter"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="102sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:id="@+id/linearLayout3"
        android:layout_above="@+id/linearLayout4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/plus"
            android:id="@+id/bLeftPlus"
            android:layout_weight="50"
            android:textSize="72sp"
            android:textStyle="bold"
            android:layout_marginEnd="2.5dp"
            android:layout_marginRight="2.5dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="151dp"
            android:text="@string/plus"
            android:id="@+id/bRightPlus"
            android:layout_weight="50"
            android:textStyle="bold"
            android:textSize="72sp"
            android:layout_marginLeft="2.5dp"
            android:layout_marginStart="2.5dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout4">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/minus"
            android:id="@+id/bLeftMinus"
            android:layout_weight="50"
            android:textSize="72sp"
            android:textStyle="bold"
            android:layout_marginRight="2.5dp"
            android:layout_marginEnd="2.5dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="151dp"
            android:text="@string/minus"
            android:id="@+id/bRightMinus"
            android:layout_weight="50"
            android:textSize="72sp"
            android:textStyle="bold"
            android:layout_marginLeft="2.5dp"
            android:layout_marginStart="2.5dp"/>
    </LinearLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset"
        android:background="@color/redText"
        android:id="@+id/bReset"
        android:layout_below="@+id/tvCounter"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff" />
</RelativeLayout>
