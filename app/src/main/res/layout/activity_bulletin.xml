<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    tools:context="com.socialgroupe.hiikey.Bulletin">

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/lvBulletin"
        android:nestedScrollingEnabled="false"
        android:numColumns="auto_fit" />

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fabBulletin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        fab:fab_colorNormal="@color/appColor"
        fab:fab_colorPressed="#FFFFFFFF"
        android:layout_marginRight="36dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="34dp"
        android:src="@drawable/ic_action_savedbulletin" />
</FrameLayout>
