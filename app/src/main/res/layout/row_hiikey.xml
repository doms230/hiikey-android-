<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <!-- image of flyer-->
        <com.parse.ParseImageView
            android:id="@+id/ivflyermain"
            android:layout_width="match_parent"
            android:layout_height="410dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:padding="5dp"
            android:layout_marginTop="5dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/people"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_people_grey"
                />
            <TextView
                android:id="@+id/numPeople"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/people"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="180dp"
                android:text="0"
                android:gravity="center"
                />
            <ImageButton
                android:id="@+id/info"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_info_grey"
                android:layout_toRightOf="@+id/numPeople"
                android:layout_marginRight="10dp"
                android:background="@null"

                />
            <ImageButton
                android:id="@+id/share"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_share_grey"
                android:layout_toRightOf="@+id/info"
                android:layout_marginRight="10dp"
                android:background="@null"
               />
            <ImageButton
                android:id="@+id/like"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_heart_grey"
                android:layout_toRightOf="@+id/share"
                android:background="@null"
                />

        </RelativeLayout>


</LinearLayout>