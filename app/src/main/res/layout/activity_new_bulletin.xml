<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.socialgroupe.hiikey.NewBulletin"
    android:padding="5dp"
    android:background="#ffffffff">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pbNewBulletin"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:visibility="gone"
        android:indeterminate="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etBulletinTitle"
        android:hint="@string/bulletinname" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etBulletinLocation"
        android:layout_gravity="center_horizontal"
        android:hint="@string/city"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/bulletinsetting"
        android:id="@+id/textView6"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rgBulletinSetting">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/open"
                    android:id="@+id/rbBulletinOpen"
                    android:checked="true" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/closed"
                    android:id="@+id/rbBulletinClosed"
                    android:checked="true" />

            </RadioGroup>

        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ibBulletinSettingInfo"
            android:src="@drawable/ic_action_info_red"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:layout_marginLeft="15dp"
            android:background="#ffffffff" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:id="@+id/rgShowHide"
                android:focusableInTouchMode="false">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/showTitle"
                    android:id="@+id/rbShowTitle"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hideTitle"
                    android:id="@+id/rbHideTitle"
                    android:checked="true" />
            </RadioGroup>
        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ibShowHide"
            android:src="@drawable/ic_action_info_red"
            android:padding="5dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:background="#ffffffff" />

    </LinearLayout>

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:id="@+id/ibUploadBulletin"
        android:layout_gravity="center_horizontal"
        android:src="@android:drawable/ic_menu_upload"
        android:background="@color/appColor"
        android:layout_marginTop="5dp" />

</LinearLayout>
