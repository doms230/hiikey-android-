<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="10dp"
    tools:context="com.dominic.nopinion.socialgroupe.NewProfile"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="vertical">

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="385dp"
        android:id="@+id/ivUploadProfilePicture"
        android:background="@color/appColor" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/imageView6"
            android:background="@drawable/ic_action_person_yup"
            android:layout_gravity="center_vertical" />

        <EditText
            android:layout_width="282dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etDisplayName"
            android:layout_gravity="center_horizontal"
            android:hint="@string/displayName" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pbEditProfile"
            android:indeterminate="false"
            android:clickable="true"
            android:visibility="invisible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout7"
        android:padding="5dp">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/ivInstagram"
            android:background="@mipmap/instagram_icon"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"/>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/ivTumblr"
            android:background="@drawable/tumblr_icon"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/ivTwitter"
            android:background="@drawable/twitter_icon"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"/>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/ivSnapchat"
            android:background="@drawable/snapchat_icon"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"/>
    </LinearLayout>
</LinearLayout>