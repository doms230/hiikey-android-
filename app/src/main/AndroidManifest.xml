<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.socialgroupe.hiikey" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <!--
     To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a user. This disconnect
     option is required to comply with the Google+ Sign-In developer policies
    -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <!-- Parse Push notification stuff -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <!--
      IMPORTANT: Change "com.parse.starter.permission.C2D_MESSAGE" in the lines below
      to match your app's package name + ".permission.C2D_MESSAGE".

      may need this... logger said that this was a duplicate
    -->

    <permission
        android:name="com.socialgroupe.hiikey.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.socialgroupe.hiikey.permission.C2D_MESSAGE" />

    <!-- ******************************* -->
    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_hiikey"
        android:label="@string/app_name"
        android:theme="@style/yolo" >
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        //////////////////////////Splash//////////////////////////////////////////////////
        /////////////////////////////////Profile/////////////////////////
        <activity
            android:name=".Profile"
            android:label="@string/title_activity_profile"
            android:parentActivityName=".Home"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.socialgroupe.PROFILE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.socialgroupe.hiikey.Home" />
        </activity>
        //////////////////////////////////////////////////////////////
        <activity
            android:name=".Splash"
            android:label="Splash"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.socialgroupe.SPLASH" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Event_Info"
            android:label="@string/title_activity_new_post"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.socialgroupe.NEWPOST" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        //////////////////////Forgot Password////////////////////////////////////////////////////
        <activity
            android:name=".ForgotPassFrag"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.socialgroupe.FORGOTPASSWORD" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        ////////////////////////////////////Edit profile////////////////////////////////////////////
        <activity
            android:name=".EditProfile"
            android:label="@string/title_activity_edit_profile"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.socialgroupe.EDITPROFILE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        //////////////////////////////////////See
        FLyer//////////////////////////////////////////////
        <meta-data
            android:name="com.google.android.backup.api_key"
            android:value="AEdPqrEAAAAIciWKtEVeRsOnCP4F_MGzlVuER7sxk5oknW2HUw" />

        <!-- -New Design/New Event -->
        <activity
            android:name=".NewDesign"
            android:label="@string/title_activity_new_event"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo.NoActionBar" >
            <intent-filter>
                <action android:name="com.socialgroupe.NEWEVENT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- -Promotion/Privacy Setting -->
        <activity
            android:name=".Promotion"
            android:label="@string/title_activity_privacy"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.socialgroupe.PROMOTION" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Login -->


        <!-- Signup -->


        <!-- -Events the User Created/is Hosting -->
        <activity
            android:name=".YourEvent"
            android:label="@string/title_activity_your_event"
            android:parentActivityName=".Home" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.socialgroupe.hiikey.Home" />
        </activity>

        <!-- -Users hosting the current user -->
        <activity
            android:name=".Hosts"
            android:label="@string/title_activity_hosts"
            android:parentActivityName=".Home" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.socialgroupe.hiikey.Home" />
        </activity>

        <!-- -Users on the current user's guest list -->
        <activity
            android:name=".Guests"
            android:label="@string/title_activity_guests"
            android:parentActivityName=".Home" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.socialgroupe.hiikey.Home" />
        </activity>
        <!-- Parse stuff ************************************ -->

        <service android:name="com.parse.PushService" />

        <receiver android:name="com.parse.ParseBroadcastReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.USER_PRESENT" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.parse.ParsePushBroadcastReceiver"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.parse.push.intent.RECEIVE" />
                <action android:name="com.parse.push.intent.DELETE" />
                <action android:name="com.parse.push.intent.OPEN" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.parse.GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <!-- IMPORTANT: Change "com.parse.starter" to match your app's package name. -->
                <category android:name="com.socialgroupe.hiikey" />
            </intent-filter>
        </receiver>

        <meta-data
            android:name="com.parse.push.notification_icon"
            android:resource="@mipmap/ic_launcher_hiikey" />

        <!-- -User Profile -->
        <activity
            android:name=".MyProfile"
            android:label="MyProfile"
            android:parentActivityName=".Home" >
            <intent-filter>
                <action android:name="com.socialgroupe.MYPROFILE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.socialgroupe.hiikey.Home" />
        </activity>

        <!-- -Bulletin -->


        <!-- -Bulletin Posts -->


        <!-- -Saved Flyers/Events -->


        <!-- -Subscribed Bulletins -->


        <!-- -Create New Bulletin -->


        <!-- -Edit Bulletin -->


        <!-- -Search -->
        <activity
            android:name=".Search"
            android:label="@string/search"
            android:parentActivityName=".Home" >
            <intent-filter>
                <action android:name="com.socialgroupe.SEARCHBULLETINS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <!-- -Home- -->
        <activity
            android:name=".Home"
            android:label="Home"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.socialgroupe.HOME" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- -Interested- -->
        <activity
            android:name=".InterestedFrag"
            android:label="Interested"
            android:parentActivityName=".Home" >
            <intent-filter>
                <action android:name="com.socialgroupe.INTERESTED" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Signup_Login"
            android:label="Login"
            android:parentActivityName=".Home" >
            <intent-filter>
                <action android:name="com.socialgroupe.SIGNIN_SIGNUP" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
          >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
